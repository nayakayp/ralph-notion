# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/notionv2
# Or use individual settings:
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=notionv2
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres
# DATABASE_SSL=false

# BetterAuth Configuration
BETTER_AUTH_SECRET=your-super-secret-key-change-in-production
BETTER_AUTH_URL=http://localhost:3001

# Storage Configuration
# Options: local, s3
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# AWS S3 Configuration (required if STORAGE_PROVIDER=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=notionv2-uploads
# Optional: Custom S3 endpoint for S3-compatible services (MinIO, R2, etc.)
# AWS_S3_ENDPOINT=http://localhost:9000
